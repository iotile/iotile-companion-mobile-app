    <allow-intent href="https://maps.google.com/*" />
    <allow-intent href="https://*.googleapis.com/*" />
    <allow-intent href="https://*.gstatic.com/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="true" />
        <preference name="android-targetSdkVersion" value="28" />
        <icon density="ldpi" src="resources/android/icon/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="resources/android/icon/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="resources/android/icon/drawable-hdpi-icon.png" />
        <splash density="land-ldpi" src="resources/android/splash/drawable-land-ldpi-screen.png" />
        <splash density="land-mdpi" src="resources/android/splash/drawable-land-mdpi-screen.png" />
        <splash density="land-hdpi" src="resources/android/splash/drawable-land-hdpi-screen.png" />
        <splash density="port-ldpi" src="resources/android/splash/drawable-port-ldpi-screen.png" />
        <splash density="port-mdpi" src="resources/android/splash/drawable-port-mdpi-screen.png" />
        <splash density="port-hdpi" src="resources/android/splash/drawable-port-hdpi-screen.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <hook src="scripts/update-ios-icons-hook.js" type="after_prepare" />
        <preference name="BackupWebStorage" value="none" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="deployment-target" value="9.0" />
        <preference name="ios-XCBuildConfiguration-VALID_ARCHS" value="arm64 armv7" />
        <preference name="ios-XCBuildConfiguration-ARCHS" value="arm64 armv7" />
        <config-file parent="NSBluetoothPeripheralUsageDescription" target="*-Info.plist">
            <string>This app requires bluetooth access to function properly to communicate with IOTile Devices via Bluetooth Low Energy.</string>
        </config-file>
        <config-file parent="NSBluetoothAlwaysUsageDescription" target="*-Info.plist">
            <string>This app requires bluetooth access to function properly to communicate with IOTile Devices via Bluetooth Low Energy.</string>
        </config-file>
        <config-file mode="add" parent="ITSAppUsesNonExemptEncryption" target="*-Info.plist">
            <false />
        </config-file>
        <config-file parent="UIRequiredDeviceCapabilities" target="*-Info.plist">
            <dict>
                <key>bluetooth-le</key>
                <true />
            </dict>
        </config-file>
        <config-file parent="NSCameraUsageDescription" target="*-Info.plist">
            <string>This app needs camera access to take pictures for Notes</string>
        </config-file>
        <config-file parent="NSPhotoLibraryUsageDescription" target="*-Info.plist">
            <string>This app needs photo library access to attach pictures to Notes</string>
        </config-file>
        <config-file parent="NSPhotoLibraryAddUsageDescription" target="*-Info.plist">
            <string>This app needs photo library access to save pictures there</string>
        </config-file>
        <config-file parent="NSLocationAlwaysUsageDescription" target="*-Info.plist">
            <string>This app needs location information to scan for IOTile devices over BLE</string>
        </config-file>
        <config-file parent="NSLocationWhenInUseUsageDescription" target="*-Info.plist">
            <string>This app needs location information to update device location in the iotile.cloud with Notes</string>
        </config-file>
        <splash height="480" src="resources/ios/splash/Default~iphone.png" width="320" />
