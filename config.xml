<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="115620" id="com.archiot.iotileapp" ios-CFBundleVersion="11562" version="4.3.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>IOTile</name>
    <description>
        IOTile Companion App
    </description>
    <author email="help@arch-iot.com" href="https://archsys.io">
        Arch Systems Inc.
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="https://iotile.cloud/*" />
    <allow-navigation href="https://app.iotile.cloud/*" />
    <allow-navigation href="http://localhost:8080/*" />
    <feature name="CDVWKWebViewEngine">
        <param name="ios-package" value="CDVWKWebViewEngine" />
    </feature>
    <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
    <allow-intent href="https://iotile.cloud/*" />
    <allow-intent href="https://6ee0a8d8f166412cbefb38dc045665ed@sentry.io/171004" />
