    <hook src="scripts/update-platform-config-hook.js" type="after_prepare" />
    <hook src="scripts/update-build-number-hook.js" type="before_prepare" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <plugin name="cordova-plugin-device" spec="~1.1.2" />
    <plugin name="cordova-plugin-geolocation" spec="^2.4.3">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="This app needs geolocation to save location information for IOTile devices" />
    </plugin>
